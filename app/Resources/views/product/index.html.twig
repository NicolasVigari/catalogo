{% extends 'layout.html.twig' %}

{% block body %}<b>
    <h1>Products list</h1>

	<ul class="border border-secondary">
        <li>
			<h4> <a  href="{{ path('product_new') }}" class="text-white">Crear un nuevo producto</a>
        </li>
    </ul>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Imagen</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
			{% for product in products %}
				<tr>
					<td>{{ product.name }}</td>
					<td><img src="{{ '/../catalogo/web/img/' ~ product.image }}" width="50px" height="50" /></td>
					<td>
						<ul>
							<li>
								<a href="{{ path('product_show', { 'id': product.id })  }}" class="text-white">show</a>
							</li>
							<li>
								<a href="{{ path('product_edit', { 'id': product.id }) }}" class="text-white">edit</a>
							</li>
						</ul>
					</td>
				</tr>
			{% endfor %}
        </tbody>
    </table>


{% endblock %}
