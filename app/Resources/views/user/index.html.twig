{% extends 'layout.html.twig' %}

{% block body %}<b>
		<h1>Users list</h1>

		<ul>
			<li>
				<a href="{{ path('user_new') }}" class="text-white">Crear un nuevo usuario</a>
			</li>
		</ul>

		<table class="table table-hover">
			<thead>
				<tr>
					<th>Username</th>
					<th>Email</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.username }}</td>
						<td>{{ user.email }}</td>

						{% if app.user  %}
							<td>

								<ul>
									<li>
										<a href="{{ path('user_show', { 'id': user.id }) }}" class="text-white">Mostrar</a>
									</li>
									<li>
										<a href="{{ path('user_edit', { 'id': user.id }) }}" class="text-white">Editar</a>
									</li>
								</ul>

							</td>
						{% endif %}
					</tr>

				{% endfor %}
			</tbody>
		</table>


	{% endblock %}
