{% extends 'layout.html.twig' %}


{% block body %}
    <h1>Lista de Categorias</h1>
	
	<ul class="border border-secondary">
        <li>
            <h4><a href="{{ path('category_new') }}" class="text-white">Crear nueva categoria.</a>
        </li>
    </ul>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Icon</th>
                <th>Actions</th>
            </tr>

        </thead>
        <tbody>
			{% for category in categories %}
				<tr>
					<td>{{ category.name }}</td>
					<td><img src="{{ '/../catalogo/web/icon/' ~ category.icon }}" width="50px" height="50" /></td>
					<td>
						<ul>
							<li>
								<a href="{{ path('category_show', { 'id': category.id }) }}" class="text-white">Mostrar</a>
							</li>
							<li>
								<a href="{{ path('category_edit', { 'id': category.id }) }}" class="text-white">Editar</a>
							</li>
						</ul>
					</td>
				</tr>
			{% endfor %}
        </tbody>
    </table>



{% endblock %}
