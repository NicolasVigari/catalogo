{% extends 'layout.html.twig' %}
{% form_theme delete_form 'bootstrap_3_layout.html.twig' %}
{% block body %}
    <h1>Categoria</h1>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nombre:  </th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Icon</th>
                <td>{{ category.icon }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('category_index') }}" class="text-white">Volver</a>
        </li>
        <li>
            <a href="{{ path('category_edit', { 'id': category.id }) }}" class="text-white">Editar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" class="btn btn-danger" value="Borrar">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
