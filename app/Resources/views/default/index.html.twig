{% extends 'layout.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
{%block body %}
	<b>
	<h1>Lista de Productos</h1>
	{{ form_start(form) }}
	{{ form_widget(form) }}
	<input type="submit" class="btn btn-primary" value="Buscar" /><br/><br/>
	<li>
		<a href="{{ path('homepage') }}" class="text-white">Volver</a><br/><br/>
	</li>
    {{ form_end(form) }}
		<table class="table table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
			{% for product in products %}
				<tr>
					<td>{{ product.name }}</td>
					<td><img src="{{ '/../catalogo/web/img/' ~ product.image }}" width="50px" height="50" /></td>
					<td>
						<ul>
							<li>
								<a href="{{ path('product_show', { 'id': product.id }) }}" class="text-white">show</a>
							</li>
							<li>
								<a href="{{ path('product_edit', { 'id': product.id }) }}" class="text-white">edit</a>
							</li>
						</ul>
					</td>
				</tr>
			{% endfor %}
        </tbody>
    </table>
{% endblock %}
